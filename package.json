{
    "name": "chat-server",
    "version": "1.0.0",
    "description": "A chat server",
    "main": "dist/index.js",
    "scripts": {
        "debug": "node --inspect dist/server.js",
        "webpack": "webpack",
        "start-dev": "nodemon dist/server.js",
        "start": "node dist/server.js",
        "start-db": "docker-compose up -d mongo",
        "test": "export MONGO_TEST_DB=1; npm run eslint && npm run jest",
        "eslint": "eslint .",
        "jest": "jest --coverage --forceExit",
        "node_latest": "docker-compose up node_latest",
        "node_6": "docker-compose up node6",
        "node_8": "docker-compose up node8",
        "test_latest": "docker-compose run node_latest npm test",
        "test_6": "docker-compose run node6 npm test",
        "test_8": "docker-compose run node8 npm test"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/alevor657/chat-server.git"
    },
    "author": "Alexey V",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/alevor657/chat-server/issues"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^7.2.3",
        "babel-jest": "^21.2.0",
        "babel-loader": "^7.1.2",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-es2015": "^6.24.1",
        "eslint": "^4.10.0",
        "eslint-plugin-jest": "^21.3.2",
        "jest": "^21.2.1",
        "regenerator-runtime": "^0.11.0",
        "supertest": "^3.0.0",
        "webpack": "^3.8.1"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.18.2",
        "chalk": "^2.3.0",
        "cors": "^2.8.4",
        "express": "^4.16.2",
        "express-promise-router": "^2.0.0",
        "joi": "^13.0.2",
        "jsonwebtoken": "^8.1.0",
        "mongoose": "^4.13.4",
        "morgan": "^1.9.0",
        "passport": "^0.4.0",
        "passport-jwt": "^3.0.1",
        "passport-local": "^1.0.0",
        "socket.io": "^1.7.4",
        "socketio-chat-server": "^1.0.0"
    },
    "homepage": "https://github.com/alevor657/chat-server#readme"
